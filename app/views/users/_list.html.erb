<div class="container px-5 px-sm-0">
  <div class="row">

    <h2 class="mt-3">User info</h2>
    <%= attachment_image_tag @user, :profile_image , :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>

    <div class="row">
      <% if @user.id == current_user.id %>
        <p><%= link_to "Edit", edit_user_path(@user), class:"link btn btn-success" %></p>
      <% end %>
    </div>

    <h2 class="mt-3">New book</h2>
    <%= form_with model: @book, local:true do |f| %>
    <div class="form-group">
      <label class="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <label class="book_opinion">Opinion</label>
      <%= f.text_area :body %>
    </div>
    <div class="form-group">
      <%= f.submit 'Create Book', class:"link btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>